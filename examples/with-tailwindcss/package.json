{
  "name": "my-razzle-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all -p start:css start:js",
    "build": "npm-run-all build:css build:js",
    "start:js": "razzle start",
    "build:js": "razzle build",
    "start:css": "postcss src/client.css -o src/css/tailwind.css --watch",
    "build:css": "postcss src/client.css -o src/css/tailwind.css --env production",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "@jaredpalmer/after": "^3.0.2",
    "express": "4.17.1",
    "razzle": "3.1.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "autoprefixer": "^9.8.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "tailwindcss": "^1.4.6"
  }
}
