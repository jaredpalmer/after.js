{
  "include": ["src", "types"],
  "exclude": ["src/test", "build", "node_modules"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2015",
    "lib": ["dom", "ES2020"],
    "outDir": "dist/types",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true
  }
}
